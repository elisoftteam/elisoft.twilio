<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <PackageId>Elisoft.Twilio</PackageId>
        <Version>1.0.0</Version>
        <Authors>Elisoft Team</Authors>
        <Company>Elisoft</Company>
        <Description>A lightweight and simple library for sending notifications SMS with Twilio in .NET applications.</Description>
        <PackageTags>twilio;sms;notification;webhook;alert;net9</PackageTags>
        <RepositoryUrl>https://github.com/elisoftteam/elisoft.twilio</RepositoryUrl>
        <PackageProjectUrl>https://github.com/elisoftteam/elisoft.twilio</PackageProjectUrl>
        <RepositoryType>git</RepositoryType>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.12" />
    </ItemGroup>

    <ItemGroup>
        <None Include="/Users/kacper/Elisoft/Elisoft.Twilio/README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>
